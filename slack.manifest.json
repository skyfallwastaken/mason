{
  "display_information": {
    "name": "Hackatime Help Bot",
    "description": "Help ticket triage bot for Hackatime support threads.",
    "background_color": "#2f855a"
  },
  "features": {
    "bot_user": {
      "display_name": "Hackatime Help Bot",
      "always_online": false
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "chat:write",
        "channels:history",
        "channels:read",
        "groups:history",
        "groups:read",
        "reactions:write"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": ["message.channels", "message.groups", "app_mention"]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true,
    "token_rotation_enabled": false
  }
}
